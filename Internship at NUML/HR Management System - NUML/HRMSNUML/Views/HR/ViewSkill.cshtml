@model IEnumerable<HRMSNUML.Models.skill>

@{
    ViewBag.Title = "View Skills";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="shadow-lg p-3 mb-5 bg-white rounded">
    <div class="card card-info mt-2 mx-auto">
        <div class="card-header" style="background-color: deepskyblue;">
            <h3 class="card-title">View Category</h3>
        </div>
    </div>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.skillCategoryID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SkillSubCategoryId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BreifBiography)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.skillCategoryID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SkillSubCategoryId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BreifBiography)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditSkill", new { id = item.SkillId }) |
            @Html.ActionLink("Delete", "DeleteSkill", new { id = item.SkillId })
        </td>
    </tr>
        }

    </table>

    <div class="row">
        <div class="col-md-6">
            <label style="color: #17a2b8;">Back to Skill Form </label>

            <div class="form-group">

                <a height="240px" class="btn btn-primary " href="AddSkill"> Back </a>
            </div>
        </div>
    </div>
</div>