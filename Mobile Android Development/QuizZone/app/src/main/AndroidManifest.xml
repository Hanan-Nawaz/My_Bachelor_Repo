<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.quizzone">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/quizzone"
        android:label="@string/app_name"
        android:roundIcon="@drawable/quizzone"
        android:supportsRtl="true"
        android:theme="@style/Theme.QuizZone"
        tools:targetApi="31">
        <activity
            android:name=".Activities.Menu.MainActivity"
            android:exported="false"
            android:label=""
            android:theme="@style/Theme.QuizZone.NoActionBar" />
        <activity
            android:name=".Activities.SignInSignUp.AuthActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
    <uses-permission android:name="android.permission.INTERNET"
        tools:ignore="ManifestOrder" />
</manifest>